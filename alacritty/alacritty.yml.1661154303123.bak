window:
  padding:
    x: 4
    y: 4
font:
  normal:
    # family: NotoSansMono Nerd Font
    family: JetbrainsMono Nerd Font
    style: Regular

  bold:
    # family: NotoSansMono Nerd Font
    family: JetbrainsMono Nerd Font
    style: Bold

  italic:
    # family: NotoSansMono Nerd Font
    family: JetbrainsMono Nerd Font
    style: Italic

  bold_italic:
    # family: NotoSansMono Nerd Font
    family: JetbrainsMono Nerd Font
    style: Bold Italic

  size: 16
shell:
  program: /usr/local/bin/fish
  args:
    - -l
    - -c
    - "tmux attach || tmux"
# falcon colorscheme for alacritty
# by fenetikm, https://github.com/fenetikm/falcon
colors:
  name: 3024 (dark)
  author: Chris Kempson
  primary:
    background: "#090300"
    foreground: "#a5a2a2"
  cursor:
    text: "#090300"
    cursor: "#a5a2a2"
  normal:
    black: "#090300"
    red: "#db2d20"
    green: "#01a252"
    yellow: "#fded02"
    blue: "#01a0e4"
    magenta: "#a16a94"
    cyan: "#b5e4f4"
    white: "#a5a2a2"
  bright:
    black: "#5c5855"
    red: "#db2d20"
    green: "#01a252"
    yellow: "#fded02"
    blue: "#01a0e4"
    magenta: "#a16a94"
    cyan: "#b5e4f4"
    white: "#f7f7f7"

# Use custom cursor colors. If true, display the cursor in the cursor.foreground
# and cursor.background colors, otherwise invert the colors of the cursor.
custom_cursor_colors: true
theme: 3024.dark
