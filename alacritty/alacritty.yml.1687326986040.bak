window:
  decorations: none
  startup_mode: Maximized
  option_as_alt: Both
  padding:
    x: 4
    y: 4
font:
  normal:
    family: Liga SFMono Nerd Font
    # family: Liga SFMono Nerd Font
    style: Regular

  bold:
    family: Liga SFMono Nerd Font
    # family: Liga SFMono Nerd Font
    style: Bold

  italic:
    family: Liga SFMono Nerd Font
    # family: Liga SFMono Nerd Font
    style: Italic

  bold_italic:
    family: Liga SFMono Nerd Font
    #0 family: Liga SFMono Nerd Font
    style: Bold Italic
  size: 18
shell:
  program: /usr/local/bin/fish
  args:
    - -l
    - -c
    - "/usr/local/bin/tmuxiniter"
