env:
  TERM: xterm-256color
window:
  padding:
    x: 4
    y: 4
font:
  normal:
    # family: NotoSansMono Nerd Font
    family: Iosevka Nerd Font
    style: Regular

  bold:
    # family: NotoSansMono Nerd Font
    family: Iosevka Nerd Font
    style: Bold

  italic:
    # family: NotoSansMono Nerd Font
    family: Iosevka Nerd Font
    style: Italic

  bold_italic:
    # family: NotoSansMono Nerd Font
    family: Iosevka Nerd Font
    style: Bold Italic

  size: 16
shell:
  program: /usr/local/bin/fish
# falcon colorscheme for alacritty
# by fenetikm, https://github.com/fenetikm/falcon
colors:
  name: Gnometerm
  author: ""
  primary:
    background: "#000000"
    foreground: "#ffffff"
  cursor:
    text: "#000000"
    cursor: "#ffffff"
  normal:
    black: "#000000"
    red: "#cc0000"
    green: "#4e9a06"
    yellow: "#c4a000"
    blue: "#3465a4"
    magenta: "#75507b"
    cyan: "#06989a"
    white: "#d3d7cf"
  bright:
    black: "#555753"
    red: "#ef2929"
    green: "#8ae234"
    yellow: "#fce94f"
    blue: "#729fcf"
    magenta: "#ad7fa8"
    cyan: "#34e2e2"
    white: "#eeeeec"

# Use custom cursor colors. If true, display the cursor in the cursor.foreground
# and cursor.background colors, otherwise invert the colors of the cursor.
custom_cursor_colors: true
theme: Gnometerm
