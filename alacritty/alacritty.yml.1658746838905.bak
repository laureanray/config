window:
  padding:
    x: 4
    y: 4
font:
  normal:
    # family: NotoSansMono Nerd Font
    family: JetbrainsMono Nerd Font
    style: Regular

  bold:
    # family: NotoSansMono Nerd Font
    family: JetbrainsMono Nerd Font
    style: Bold

  italic:
    # family: NotoSansMono Nerd Font
    family: JetbrainsMono Nerd Font
    style: Italic

  bold_italic:
    # family: NotoSansMono Nerd Font
    family: JetbrainsMono Nerd Font
    style: Bold Italic

  size: 16
shell:
  program: /usr/local/bin/fish
  args:
    - -l
    - -c
    - "tmux attach || tmux"
