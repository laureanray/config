configuration {
    font: 							"Iosevka Nerd Font 12";
    fixed-num-lines: 				true;
    show-icons: 					false;
    sidebar-mode: 					false;
    scroll-method: 					0;
    window-format: 					"[{w}] {c} {t}";
    click-to-exit: 					true;
    combi-hide-mode-prefix: 		false;
    display-window: 				" ";
    display-windowcd: 				"";
    display-run: 					" ";
    display-ssh: 					"";
    display-drun: 					"";
    display-combi: 					"";
}

@import "styles/colors.rasi"

* {
}

window {
    border: 						0px;
    border-color: 					@ac;
    border-radius: 					6px;
    width: 							50%;
    background-color: transparent;
}

prompt {
    spacing: 						0;
    background-color: transparent;
    text-color: 				@fg;
}

textbox-prompt-colon {
    expand: 						false;
    str: 							" ";
    margin:							0px 4px 0px 0px;
    text-color: 					inherit;
    background-color: transparent;
}

entry {
    spacing:    					0;
    text-color: 					@fg;
    background-color: transparent;
}

case-indicator {
    spacing:    					0;
    text-color: 					@fg;
    background-color: transparent;
}

inputbar {
    spacing:    					0px;
    text-color: 					@fg;
    padding:    					5px 1px 1px 1px;
    background-color: transparent;
    children: 						[ prompt,textbox-prompt-colon,entry,case-indicator ];
}

mainbox {
    border: 						0px;
    border-color: 					@ac;
    padding: 						6;
    background-color: transparent;
}

listview {
    lines:							6;
    columns:						1;
    fixed-height: 					0;
    border: 						0px;
    border-color: 					@ac;
    spacing: 						4px;
    scrollbar: 						false;
    padding: 						5px 5px 0px 5px;
    background-color: transparent;
}

element-text, element-icon {
    text-color:       inherit;
    background-color: transparent;
}

element {
    border: 						0px;
    border-radius: 					4px;
    padding: 						5px;
    background-color: transparent;
}
element normal.normal {
    text-color:       				@fg;
    background-color: transparent;
}
element normal.urgent {
    text-color:       				@red;
    background-color: transparent;
}
element normal.active {
    text-color:       				@fg;
    background-color: transparent;
}
element selected.normal {
    text-color:       				#ffffff;
    background-color: transparent;
}
element selected.urgent {
    text-color:       				@fg;
    background-color: transparent;
}
element selected.active {
    text-color:       				@fg;
    background-color: transparent;
}
element alternate.normal {
    text-color:       				@fg;
    background-color: transparent;
}
element alternate.urgent {
    text-color:       				@fg;
    background-color: transparent;
}
element alternate.active {
    text-color:       				@fg;
    background-color: transparent;
}

sidebar {
    border:       					0px;
    border-color: 					@ac;
    border-radius: 					0px;
}

button {
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin: 						5px;
    padding: 						5px;
    background-color: transparent;
}

button selected {
    text-color: 					red;
    border: 						0px;
    border-radius: 					20px;
    border-color: 					@fg;
    background-color: transparent;
}

scrollbar {
    width:        					4px;
    border:       					0px;
    handle-color: 					@fg;
    handle-width: 					8px;
    padding:      					0;
    background-color: transparent;
}

message {
    border: 						0px;
    border-color: 					@ac;
    padding: 						1px;
    background-color: transparent;
}

textbox {
    text-color: 					@fg;
    background-color: transparent;
}
